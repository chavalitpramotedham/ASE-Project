<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateSession">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:elevation="5dp"
        android:background="@drawable/blue_border"
        android:id="@+id/relLayout2">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="39dp"
            android:layout_height="42dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_arrow_back"
            android:clickable="true"/>

        <TextView
            android:id="@+id/location_name"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/back_button"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:textSize="23sp"
            android:textColor="#FFF"
            android:background="@android:color/transparent"
            />

    </RelativeLayout>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        map:backgroundTint = "@color/quantum_bluegrey700"
        map:menu="@menu/app_bar_menu"
        map:navigationIcon="@drawable/ic_wifilogo" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/homeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_home_black_24dp"
        map:backgroundTint="@color/quantum_bluegrey400"
        map:layout_anchor = "@id/bottomAppBar"
        map:maxImageSize="35dp"
        map:tint = "@color/colorWhite"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/directions"
        style="@style/Widget.Design.FloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:elevation="10dp"
        map:backgroundTint="@color/colorWhite"
        map:maxImageSize="35dp"
        map:srcCompat="@drawable/ic_directions"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="572dp"
        android:layout_marginTop="100dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/scroll"
                android:layout_width="407dp"
                android:layout_height="573dp"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:textColor="#000"
                android:textSize="18sp"
                map:layout_constraintBottom_toBottomOf="parent"
                map:layout_constraintEnd_toEndOf="parent"
                map:layout_constraintStart_toStartOf="parent"
                map:layout_constraintTop_toTopOf="parent"
                map:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/titleT"
                android:layout_width="50dp"
                android:layout_height="27dp"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:text="Title:"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                map:layout_constraintBottom_toBottomOf="parent"
                map:layout_constraintEnd_toEndOf="parent"
                map:layout_constraintHorizontal_bias="0.087"
                map:layout_constraintStart_toStartOf="parent"
                map:layout_constraintTop_toTopOf="parent"
                map:layout_constraintVertical_bias="0.06" />

            <EditText
                android:id="@+id/title"
                android:layout_width="200dp"
                android:layout_height="27dp"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:hint="Enter Title Here"
                android:textColor="#000"
                android:textSize="18sp"
                map:layout_constraintBottom_toBottomOf="parent"
                map:layout_constraintEnd_toEndOf="@+id/scroll"
                map:layout_constraintHorizontal_bias="0.589"
                map:layout_constraintStart_toStartOf="parent"
                map:layout_constraintTop_toTopOf="parent"
                map:layout_constraintVertical_bias="0.06" />

            <TextView
                android:id="@+id/descriptionT"
                android:layout_width="120dp"
                android:layout_height="27dp"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:text="Description:"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                map:layout_constraintBottom_toBottomOf="parent"
                map:layout_constraintEnd_toEndOf="parent"
                map:layout_constraintHorizontal_bias="0.109"
                map:layout_constraintStart_toStartOf="parent"
                map:layout_constraintTop_toTopOf="parent"
                map:layout_constraintVertical_bias="0.14" />

            <EditText
                android:id="@+id/description"
                android:layout_width="330dp"
                android:layout_height="51dp"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:hint="Enter Description Here"
                android:scrollHorizontally="true"
                android:textColor="#000"
                android:textSize="18sp"
                map:layout_constraintBottom_toBottomOf="parent"
                map:layout_constraintEnd_toEndOf="@+id/scroll"
                map:layout_constraintHorizontal_bias="0.405"
                map:layout_constraintStart_toStartOf="parent"
                map:layout_constraintTop_toTopOf="parent"
                map:layout_constraintVertical_bias="0.22" />

            <TextView
                android:id="@+id/startdateT"
                android:layout_width="100dp"
                android:layout_height="27dp"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:text="Start Date:"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                map:layout_constraintBottom_toBottomOf="parent"
                map:layout_constraintEnd_toEndOf="parent"
                map:layout_constraintHorizontal_bias="0.102"
                map:layout_constraintStart_toStartOf="parent"
                map:layout_constraintTop_toTopOf="parent"
                map:layout_constraintVertical_bias="0.33" />

            <TextView
                android:id="@+id/selectstartdateT"
                android:layout_width="150dp"
                android:layout_height="27dp"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:text="Select Start Date"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                map:layout_constraintBottom_toBottomOf="parent"
                map:layout_constraintEnd_toEndOf="parent"
                map:layout_constraintHorizontal_bias="0.203"
                map:layout_constraintStart_toStartOf="parent"
                map:layout_constraintTop_toTopOf="parent"
                map:layout_constraintVertical_bias="0.395" />

            <TextView
                android:id="@+id/enddateT"
                android:layout_width="100dp"
                android:layout_height="27dp"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:text="End Date:"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                map:layout_constraintBottom_toBottomOf="parent"
                map:layout_constraintEnd_toEndOf="parent"
                map:layout_constraintHorizontal_bias="0.704"
                map:layout_constraintStart_toStartOf="parent"
                map:layout_constraintTop_toTopOf="parent"
                map:layout_constraintVertical_bias="0.330" />

            <TextView
                android:id="@+id/selectenddateT"
                android:layout_width="150dp"
                android:layout_height="27dp"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:text="Select End Date"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                map:layout_constraintBottom_toBottomOf="parent"
                map:layout_constraintEnd_toEndOf="parent"
                map:layout_constraintHorizontal_bias="0.931"
                map:layout_constraintStart_toStartOf="parent"
                map:layout_constraintTop_toTopOf="parent"
                map:layout_constraintVertical_bias="0.395" />

            <TextView
                android:id="@+id/starttimeT"
                android:layout_width="100dp"
                android:layout_height="27dp"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:text="Start Time:"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                map:layout_constraintBottom_toBottomOf="parent"
                map:layout_constraintEnd_toEndOf="parent"
                map:layout_constraintHorizontal_bias="0.102"
                map:layout_constraintStart_toStartOf="parent"
                map:layout_constraintTop_toTopOf="parent"
                map:layout_constraintVertical_bias="0.46" />

            <TextView
                android:id="@+id/selectstarttimeT"
                android:layout_width="150dp"
                android:layout_height="27dp"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:text="Select Start Time"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                map:layout_constraintBottom_toBottomOf="parent"
                map:layout_constraintEnd_toEndOf="parent"
                map:layout_constraintHorizontal_bias="0.203"
                map:layout_constraintStart_toStartOf="parent"
                map:layout_constraintTop_toTopOf="parent"
                map:layout_constraintVertical_bias="0.525" />

            <TextView
                android:id="@+id/endtimeT"
                android:layout_width="90dp"
                android:layout_height="27dp"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:text="End Time:"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                map:layout_constraintBottom_toBottomOf="parent"
                map:layout_constraintEnd_toEndOf="parent"
                map:layout_constraintHorizontal_bias="0.681"
                map:layout_constraintStart_toStartOf="parent"
                map:layout_constraintTop_toTopOf="parent"
                map:layout_constraintVertical_bias="0.46" />

            <TextView
                android:id="@+id/selectendtimeT"
                android:layout_width="150dp"
                android:layout_height="27dp"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:text="Select End Time"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                map:layout_constraintBottom_toBottomOf="parent"
                map:layout_constraintEnd_toEndOf="parent"
                map:layout_constraintHorizontal_bias="0.931"
                map:layout_constraintStart_toStartOf="parent"
                map:layout_constraintTop_toTopOf="parent"
                map:layout_constraintVertical_bias="0.525" />

            <TextView
                android:id="@+id/locationT"
                android:layout_width="90dp"
                android:layout_height="27dp"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:text="Location:"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                map:layout_constraintBottom_toBottomOf="parent"
                map:layout_constraintEnd_toEndOf="parent"
                map:layout_constraintHorizontal_bias="0.099"
                map:layout_constraintStart_toStartOf="parent"
                map:layout_constraintTop_toTopOf="parent"
                map:layout_constraintVertical_bias="0.59" />

            <TextView
                android:id="@+id/sessionparticipantsT"
                android:layout_width="190dp"
                android:layout_height="27dp"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:text="Session Participants:"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                map:layout_constraintBottom_toBottomOf="parent"
                map:layout_constraintEnd_toEndOf="parent"
                map:layout_constraintHorizontal_bias="0.144"
                map:layout_constraintStart_toStartOf="parent"
                map:layout_constraintTop_toTopOf="parent"
                map:layout_constraintVertical_bias="0.67" />

            <TextView
                android:id="@+id/publicT"
                android:layout_width="200dp"
                android:layout_height="52dp"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:text="Make Session Public? (Visible to all friends)"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                map:layout_constraintBottom_toBottomOf="parent"
                map:layout_constraintEnd_toEndOf="parent"
                map:layout_constraintHorizontal_bias="0.151"
                map:layout_constraintStart_toStartOf="parent"
                map:layout_constraintTop_toTopOf="parent"
                map:layout_constraintVertical_bias="0.788" />

            <Button
                android:id="@+id/submitBtn"
                android:layout_width="120dp"
                android:layout_height="65dp"
                android:backgroundTint="@android:color/holo_green_light"
                android:text="Submit"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                map:layout_constraintBottom_toBottomOf="parent"
                map:layout_constraintEnd_toEndOf="parent"
                map:layout_constraintHorizontal_bias="0.79"
                map:layout_constraintStart_toStartOf="parent"
                map:layout_constraintTop_toBottomOf="@+id/publicT"
                map:layout_constraintVertical_bias="0.333" />

            <Button
                android:id="@+id/cancelBtn"
                android:layout_width="100dp"
                android:layout_height="65dp"
                android:text="Cancel"
                map:layout_constraintBottom_toBottomOf="parent"
                map:layout_constraintEnd_toEndOf="parent"
                map:layout_constraintHorizontal_bias="0.225"
                map:layout_constraintStart_toStartOf="parent"
                map:layout_constraintTop_toBottomOf="@+id/publicT"
                map:layout_constraintVertical_bias="0.333" />

            <Switch
                android:id="@+id/swtichBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="OFF"
                android:textOn="ON"
                map:layout_constraintBottom_toTopOf="@+id/submitBtn"
                map:layout_constraintEnd_toEndOf="parent"
                map:layout_constraintHorizontal_bias="0.445"
                map:layout_constraintStart_toEndOf="@+id/publicT"
                map:layout_constraintTop_toBottomOf="@+id/endtimeT"
                map:layout_constraintVertical_bias="0.826" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>