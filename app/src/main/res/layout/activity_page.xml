<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ActivityPageMain">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <TextView android:id="@+id/simpleTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="parent"
            android:text="Activities"
            android:textSize="50dp"
            android:gravity="center_horizontal"
            android:textColor="#000"
            android:textStyle="bold"
            android:padding="0dp"/>

        <View
            android:id="@+id/view"
            app:layout_constraintBottom_toBottomOf="@id/simpleTextView"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="4dp"
            android:layout_marginTop="2dp"
            android:background="#000"
            app:layout_constraintTop_toBottomOf="@+id/simpleTextView"
            />
        <View
            android:layout_width="344dp"
            android:layout_height="3dp"
            android:layout_marginLeft="35dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="#000"
            app:layout_constraintTop_toBottomOf="@id/view"
            android:layout_marginTop="22dp"
            />
        <View
            android:layout_width="344dp"
            android:layout_height="3dp"
            android:layout_marginLeft="35dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="#000"
            app:layout_constraintTop_toBottomOf="@id/view"
            android:layout_marginTop="160dp"
            />
        <View
            android:layout_width="3dp"
            android:layout_height="140dp"
            android:layout_marginLeft="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="#000"
            app:layout_constraintTop_toBottomOf="@id/view"
            android:layout_marginTop="22dp"
            />
        <View
            android:layout_width="3dp"
            android:layout_height="140dp"
            android:layout_marginRight="29dp"
            app:layout_constraintRight_toRightOf="parent"
            android:background="#000"
            app:layout_constraintTop_toBottomOf="@id/view"
            android:layout_marginTop="22dp"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="My Sessions"
            android:textColor="#000"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@+id/simpleTextView"
            android:layout_marginLeft="35dp"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <Button
            android:id="@+id/button"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:text="History"
            android:textSize="10dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="33dp"
            app:layout_constraintTop_toBottomOf="@id/view"
            android:layout_marginTop="25dp"


            />
        <View
            android:layout_width="344dp"
            android:layout_height="3dp"
            android:layout_marginLeft="35dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="#000"
            app:layout_constraintTop_toBottomOf="@id/textView"
            />


        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="344dp"
            android:layout_height="97dp"
            android:layout_marginLeft="35dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginTop="3dp"
            android:background="#89f162"


            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".ActivityPageMain">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recyclerview"


                    >

                </androidx.recyclerview.widget.RecyclerView>

            </RelativeLayout>


        </ScrollView>

        <View
            android:layout_width="344dp"
            android:layout_height="3dp"
            android:layout_marginLeft="35dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="#000"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="260dp"
            />
        <View
            android:layout_width="344dp"
            android:layout_height="3dp"
            android:layout_marginLeft="35dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="#000"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="348dp"
            />
        <View
            android:layout_width="3dp"
            android:layout_height="91dp"
            android:layout_marginLeft="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="#000"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="260dp"
            />
        <View
            android:layout_width="3dp"
            android:layout_height="91dp"
            android:layout_marginRight="32dp"
            app:layout_constraintRight_toRightOf="parent"
            android:background="#000"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="260dp"
            />
        <TextView
            android:id="@+id/textViewIN"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="260dp"
            android:text="Invitations"
            android:textColor="#000"
            android:textSize="30dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="35dp"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <View
            android:layout_width="344dp"
            android:layout_height="3dp"
            android:layout_marginLeft="35dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="#000"
            app:layout_constraintTop_toBottomOf="@id/textViewIN"
            />

        <ScrollView
            android:id = "@+id/ScrollViewIN"
            android:layout_width="340dp"
            android:layout_height="44dp"
            android:layout_marginLeft="35dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewIN"
            android:layout_marginTop="3dp"
            android:background="#FFEB3B">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".ActivityPageMain">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recyclerview2"


                    >

                </androidx.recyclerview.widget.RecyclerView>

            </RelativeLayout>


        </ScrollView>






        <View
            android:layout_width="344dp"
            android:layout_height="3dp"
            android:layout_marginLeft="35dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="#000"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="380dp"
            />
        <View
            android:layout_width="344dp"
            android:layout_height="3dp"
            android:layout_marginLeft="35dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="#000"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="518dp"
            />
        <View
            android:layout_width="3dp"
            android:layout_height="140dp"
            android:layout_marginLeft="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="#000"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="380dp"
            />
        <View
            android:layout_width="3dp"
            android:layout_height="140dp"
            android:layout_marginRight="29dp"
            app:layout_constraintRight_toRightOf="parent"
            android:background="#000"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="380dp"
            />

        <TextView
            android:id="@+id/textViewFA"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="310dp"
            android:text="Friends' Activity"
            android:textColor="#000"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@+id/simpleTextView"
            android:layout_marginLeft="35dp"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <View
            android:layout_width="344dp"
            android:layout_height="3dp"
            android:layout_marginLeft="35dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="#000"
            app:layout_constraintTop_toBottomOf="@id/textViewFA"
            />
        <ScrollView
            android:layout_width="344dp"
            android:layout_height="97dp"
            android:layout_marginLeft="35dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="421dp"
            android:background="#62e3f1"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".ActivityPageMain">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recyclerview3"


                    >

                </androidx.recyclerview.widget.RecyclerView>

            </RelativeLayout>


        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>